<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="add new product"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/tshirts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/tshirts" />

    <ImageView
        android:id="@+id/sweathers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sweather" />

    <ImageView
        android:id="@+id/sports"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="8dp"
        android:src="@drawable/sports" />

    <ImageView
        android:id="@+id/female_dresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tshirts"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/female_dresses" />

    <ImageView
        android:id="@+id/glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tshirts"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/glasses" />

    <ImageView
        android:id="@+id/purses"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/tshirts"
        android:layout_marginTop="8dp"
        android:src="@drawable/purses_bags" />

    <ImageView
        android:id="@+id/hats"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/glasses"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/hats" />

    <ImageView
        android:id="@+id/shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glasses"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shoess" />

    <ImageView
        android:id="@+id/headphones"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/purses"
        android:layout_marginTop="18dp"
        android:src="@drawable/headphoness" />


    <ImageView
        android:id="@+id/laptops"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/hats"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/laptops" />

    <ImageView
        android:id="@+id/watchs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoes"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/watches" />

    <ImageView
        android:id="@+id/mobilesphones"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/headphones"
        android:layout_marginTop="38dp"
        android:src="@drawable/mobiles" />




</RelativeLayout>